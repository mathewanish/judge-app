<?xml version="1.0" encoding="utf-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.DMI.jTechChef" version="0.0.4">
  <name>jTECH CHEF</name>
  <description>App for DMI’s 6th annual TECH CHEF grilling competition.</description>
  <author href="http://DMInc.com" email="amathew@dminc.com">Anish Mathew</author>

  <!--<gap:plugin name="org.apache.cordova.splashscreen" />-->
  <plugin name="org.apache.cordova.dialogs" />
  <plugin name="org.apache.cordova.network-information" />
  <plugin name="org.apache.cordova.statusbar" />
  <plugin name="cordova-plugin-splashscreen" source="npm" />
  <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
  
  
  <!-- Platform on which the App is Supported -->s
  <platform name="ios" />

  <content src="index.html" />
  <!-- Preferences-->
  <preference name="phonegap-version" value="cli-6.5.0" />
  <preference name="orientation" value="landscape" />
  <preference name="target-device" value="tablet" />
  <preference name="fullscreen" value="true" />
  <preference name="prerendered-icon" value="true" />
  <preference name="exit-on-suspend" value="true" />
  <!-- iOS: Auto hides the splash on iOS -->
  <preference name="SplashScreen" value="screen"/>
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="SplashScreenDelay" value="3000"/>
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarBackgroundColor" value="#000000" />
  <preference name="StatusBarStyle" value="lightcontent" />
  <preference name="FadeSplashScreen" value="true"/>
  <preference name="FadeSplashScreenDuration" value="1000"/>

  <!--<feature name="SplashScreen">
    <param name="ios-package" value="CDVSplashScreen" />
    <param name="onload" value="true" />
  </feature>-->

  <!-- Default Icon-->
  <icon src="icon.png" />

  <!-- iPhone 6 / 6+ -->
  <icon src="icons/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

  <!-- iPhone / iPod Touch  -->
  <icon src="icons/ios/icon-60.png" platform="ios" width="60" height="60" />
  <icon src="icons/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

  <!-- iPad -->
  <icon src="icons/ios/icon-76.png" platform="ios" width="76" height="76" />
  <icon src="icons/ios/icon-76@2x.png" platform="ios" width="152" height="152" />
  <icon src="icons/ios/icon-83.5@2x.png" platform="ios" width="167" height="167" />

  <!-- Settings Icon -->
  <icon src="icons/ios/icon-small.png" platform="ios" width="29" height="29" />
  <icon src="icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
  <icon src="icons/ios/icon-small@3x.png" platform="ios" width="87" height="87" />

  <!-- Spotlight Icon -->
  <icon src="icons/ios/icon-40.png" platform="ios" width="40" height="40" />
  <icon src="icons/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
  <icon src="icons/ios/icon-40@3x.png" platform="ios" width="120" height="120" />

  <!-- iPhone / iPod Touch -->
  <icon src="icons/ios/icon.png" platform="ios" width="57" height="57" />
  <icon src="icons/ios/icon@2x.png" platform="ios" width="114" height="114" />

  <!-- iPad -->
  <icon src="icons/ios/icon-72.png" platform="ios" width="72" height="72" />
  <icon src="icons/ios/icon-72@2x.png" platform="ios" width="144" height="144" />

  <!-- iPad Spotlight and Settings Icon -->
  <icon src="icons/ios/icon-50.png" platform="ios" width="50" height="50" />
  <icon src="icons/ios/icon-50@2x.png" platform="ios" width="100" height="100" />

  <!-- Default Splash Screen-->
  <splash src="splash.png" />

  <!-- iOS Splash Screen-->
  <!-- iPad -->
  <splash src="splashes/ios/Default-Portrait.png" platform="ios" width="768" height="1024" />
  <splash src="splashes/ios/Default-Landscape.png" platform="ios" width="1024" height="768" />

  <!-- Retina iPad -->
  <splash src="splashes/ios/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
  <splash src="splashes/ios/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
  
</widget >
